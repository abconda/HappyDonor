<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/txtBloodGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Blood Group"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtBloodGrp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-26dp"
            android:text="Patient Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtPatient"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-26dp"
            android:text="Last Date"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtLastDate"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-26dp"
            android:text="Hospital Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDonorsNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtHospital"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-26dp"
            android:text="Donors Needed"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDonotsGot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtDonorsNeeded"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-26dp"
            android:text="Donors Got"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtDonotsGot"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-26dp"
            android:text="Posted by...."
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtPosted"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-60dp"
            android:backgroundTint="@color/light_red"
            android:elevation="10dp"
            android:text="Edit"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDeletePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/btnDonate"
            android:layout_alignBottom="@id/txtPosted"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-100dp"
            android:layout_marginBottom="-60dp"
            android:backgroundTint="@color/light_red"
            android:elevation="10dp"
            android:text="Delete"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/btnEdit"
            android:layout_alignBottom="@id/txtPosted"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-100dp"
            android:layout_marginBottom="-60dp"
            android:backgroundTint="@color/light_red"
            android:elevation="10dp"
            android:text="Donate"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
