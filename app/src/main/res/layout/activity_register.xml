<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".RegisterActivity">

        <include
            android:id="@+id/toolbarRegister"
            layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/loginLogo"
            android:layout_width="161dp"
            android:layout_height="138dp"
            app:srcCompat="@drawable/logo_noname"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtRegisterRegister"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Register"
            android:gravity="center"
            android:textColor="@color/light_red"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtRegisterPersonName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/stroke"
            android:drawableStart="@drawable/ic_baseline_name_2_24"
            android:paddingStart="10dp"
            android:drawablePadding="8dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/edtRegisterPhone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_baseline_contacts_24"
            android:paddingStart="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/stroke"
            android:hint="Mobile No."
            android:inputType="phone" />

        <EditText
            android:id="@+id/edtRegisterAlternatePhone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/stroke"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="8dp"
            android:paddingStart="10dp"
            android:hint="Alternate Mobile No."
            android:inputType="phone"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtRegisterArea"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_place_24"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:text="Area"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnRegisterArea"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center" >

            <TextView
                android:id="@+id/txtRegisterBloodGrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_baseline_bloodtype_24"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:text="Blood group"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnRegisterBloodGroup"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtRegisterLastDonated"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:paddingStart="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/stroke"
            android:hint="Last Donated On"
            android:inputType="date"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtRegisterEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:paddingStart="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/stroke"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtRegisterPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_outline_lock_24"
            android:paddingStart="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/stroke"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtRegisterConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_outline_lock_24"
            android:paddingStart="10dp"
            android:drawablePadding="8dp"
            android:background="@drawable/stroke"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnRegisterRegister"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/light_red"
            android:elevation="10dp"
            android:text="Signup"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>